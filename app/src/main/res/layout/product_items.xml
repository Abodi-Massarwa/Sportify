<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:layout_height="180dp"
    android:padding="8dp"
    android:background="#fff"
    app:cardMaxElevation="20dp"
    app:cardCornerRadius="8dp"
    android:backgroundTint="@color/purple_700"
    android:clickable="true"
    android:layout_marginTop="5dp"
    >

    <ImageView
        android:id="@+id/image_product_id"
        android:layout_width="120dp"
        android:layout_height="138dp"
        android:background="@color/American" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:layout_margin="7dp"
        android:orientation="vertical">


        <TextView
            android:id="@+id/product_name_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="120sp"
            android:text="product name"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/category_name_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="120sp"
            android:text="Category"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/rating_text_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="120sp"
            android:background="@drawable/rating_background"

            android:drawableLeft="@drawable/star_icon"
            android:text="0.0"
            android:textColor="#fff"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/price_value_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="120sp"
            android:hint="Price"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/buy_button1"
            android:layout_width="100sp"
            android:layout_height="50sp"
            android:layout_gravity="center"
            android:layout_marginLeft="120sp"
            android:layout_marginTop="16sp"
            android:backgroundTint="@color/colorPrimary"
            android:onClick="buynow"
            android:text="Order">

        </Button>
    </LinearLayout>

</androidx.cardview.widget.CardView>